manifest {
	homePage = 'https://github.com/dhineshp565/glaesserella_parasuis_typing'
    description = 'Pipeline for whole genome assembly and analysis of Glaesserella_parasuis isolates'
	author= 'dhineshp565'
   	mainScript = 'main.nf'
   	version = 'v1.0.1'
	nextflowVersion= '>=22.12.0-edge'
	manifest.defaultBranch = "main"
	name = 'dhineshp565/glaesserella_parasuis_typing'
}


params {

    // Options: Mandatory
    input='filepath'
    out_dir= 'Results'	
	trim_barcodes= null
	medaka_model= 'r1041_e82_400bps_sup_g615'
	
}


profiles {
	standard{
		docker {
			includeConfig 'config/docker.config'
			docker.enabled=true
// this ensures container is run as host user and group, but
        //    also adds host user to the within-container group
        runOptions = "--user \$(id -u):\$(id -g) --group-add 100"
		}
	}
}


process {
	withLabel:low {
		cpus= 1
	 	memory= 2.GB
	 	time= 2.h
	 }
	 withLabel:medium {
	 	cpus= 8.0
	 	memory= 6.GB
		time= 4.h
	 }
	 withLabel:high {
	 	cpus=9.0
	 	memory=16.GB
	 	time= 8.h
	 }
}
timeline {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/timeline.html"
}
report {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/report.html"
}
trace {
  enabled = true
  overwrite = true
  file = "${params.out_dir}/execution/trace.txt"
}
